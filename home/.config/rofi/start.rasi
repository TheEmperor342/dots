* {
  font:   "Noto Sans Medium 11";

  bg0     : #11111b;
  bg1     : #181825;
  bg1T    : #1818251a;
  bg2     : #1e1e2e;
  bg3     : #313244;
  fg0     : #cdd6f4;
  fg1     : #bac2de;
  fg2     : #a6adc8;
  red     : #f38ba8;
  green   : #a6e3a1;
  yellow  : #f9e2af;
  blue    : #89b4fa;
  magenta : #cba6f7;
  cyan    : #74c7ec;

  accent: @red;
  urgent: @yellow;

  background-color : transparent;
  text-color       : @fg0;

  margin  : 0;
  padding : 0;
  spacing : 0;
}

element-icon, element-text, scrollbar {
  cursor: pointer;
}

window {
  location : southwest;
  width    : 320px;
	height: 390px;
  x-offset : 15px;
  y-offset : -45px;

  background-color: @bg1T;
  border: 1px;
  border-color: @bg3;
  border-radius: 5px;
}

inputbar {
  spacing  : 8px;
	border-radius: 5px;
  padding  : 4px 8px;
  children : [ icon-search, entry ];

  background-color: @bg0;
}

icon-search, entry, element-icon, element-text {
  vertical-align: 0.5;
}

icon-search {
  expand   : false;
  filename : "search-symbolic";
  size     : 14px;
}

textbox {
  padding          : 4px 8px;
  background-color : @bg2;
}

listview {
  padding      : 4px 4px;
  lines        : 12;
  columns      : 1;
  scrollbar    : true;
  fixed-height : true;
  dynamic      : true;
	border-radius: 5px;
}

element {
  padding : 4px 8px;
  spacing : 8px;
	border-radius: 5px;
}

element normal urgent {
  text-color: @urgent;
}

element normal active {
  text-color: @accent;
}

element selected {
  text-color       : @bg1;
  background-color : @accent;
}

element selected urgent {
  background-color: @urgent;
}

element-icon {
  size: 0.8em;
}

element-text {
  text-color: inherit;
}

scrollbar {
  handle-width : 4px;
  handle-color : @fg2;
  padding      : 0 4px;
}

